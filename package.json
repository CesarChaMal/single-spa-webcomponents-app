{
  "name": "@cesarchamal/single-spa-webcomponents-app",
  "version": "1.0.18",
  "description": "Web Components microfrontend using Lit for Single-SPA",
  "main": "dist/single-spa-webcomponents-app.js",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--openssl-legacy-provider webpack --config webpack.config.cjs",
    "build:dev": "cross-env NODE_OPTIONS=--openssl-legacy-provider webpack --config webpack.config.cjs --mode development",
    "build:prod": "cross-env NODE_OPTIONS=--openssl-legacy-provider webpack --config webpack.config.cjs --mode production",
    "start": "webpack serve --config webpack.config.cjs --mode development --port 4208",
    "serve": "npm run build && npx http-server dist -p 4208 --cors",
    "lint": "eslint src --ext .js --fix"
  },
  "devDependencies": {
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.12",
    "cross-env": "^7.0.3",
    "webpack-dev-server": "^3.11.0",
    "babel-loader": "^8.0.6",
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.22.1",
    "babel-eslint": "^10.0.3"
  },
  "dependencies": {
    "lit": "^2.8.0",
    "single-spa": "^5.9.0",
    "@fortawesome/fontawesome-svg-core": "1.2.27",
    "@fortawesome/free-brands-svg-icons": "5.12.1",
    "@fortawesome/free-solid-svg-icons": "5.12.0",
    "rxjs": "^6.4.0"
  },
  "files": [
    "dist/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cesarchamal/single-spa-webcomponents-app.git"
  },
  "keywords": [
    "single-spa",
    "webcomponents",
    "lit",
    "npm",
    "webpack"
  ],
  "author": "Cesar Francisco Chavez Maldonado",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cesarchamal/single-spa-webcomponents-app/issues"
  },
  "homepage": "https://github.com/cesarchamal/single-spa-webcomponents-app#readme"
}
